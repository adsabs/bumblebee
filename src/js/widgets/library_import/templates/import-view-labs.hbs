{{#unless twopointoh_email}} {{>
js/widgets/library_import/templates/authentication-form-partial}} {{else}}

<div>You are currently authenticated as <b>{{twopointoh_email}}</b>.</div>
<div>
  <button class="btn btn-primary-faded import-all-libraries">
    <i class="fa fa-arrow-circle-down" aria-hidden="true"></i> Import all ADS
    2.0 libraries to this system
  </button>
</div>

<div>
  <h4>Download ADS 2.0 Libraries</h4>
  <hr />
  <button class="btn btn-default bibtex-import" data-target="zotero">
    <i class="fa fa-download" aria-hidden="true"></i> to Zotero-style BibTeX
  </button>
  &nbsp;
  <button class="btn btn-default bibtex-import" data-target="mendeley">
    <i class="fa fa-download" aria-hidden="true"></i> to Mendeley-style BibTeX
  </button>
</div>
<hr />
<br />

<button
  class="btn btn-default collapsed"
  data-toggle="collapse"
  data-target="#ads2-form-container"
>
  <i class="toggle-icon"></i>
  Sign into a new ADS 2.0 account
</button>
<div class="collapse" id="ads2-form-container">
  {{> js/widgets/library_import/templates/authentication-form-partial}}
</div>

{{/unless}}

<div class="status">
  {{#if errorMessage}}
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    {{{errorMessage}}}
  </div>
  {{/if}} {{#if successMessage}}
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    {{{successMessage}}}
  </div>
  {{/if}}
</div>
