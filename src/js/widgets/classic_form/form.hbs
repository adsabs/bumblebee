<form action="#classic-form">
  <div class="pull-right">
    <button
      style="position: relative;top: -13px;"
      class="btn btn-primary"
      type="submit"
    >
      <i class="fa fa-search" aria-hidden="true"></i> Search
    </button>
  </div>

  <div data-field="database">
    <b>Limit query to: </b>&nbsp;<label class="custom-checkbox">
      <input type="checkbox" checked="true" name="astronomy" />
      Astronomy </label
    >&nbsp;&nbsp;
    <label class="custom-checkbox"> <input type="checkbox" name="physics" /> Physics </label
    >&nbsp;&nbsp;
    <label class="custom-checkbox"> <input type="checkbox" name="general" /> General </label>
  </div>
  <div class="clearfix">
    <div class="col-sm-6" data-field="author" data-textInput="true">
      <div class="classic-form__logic-group logic-group">
        <label class="custom-radio">
          <input type="radio" name="author-logic" value="AND" checked="true" />
          and
        </label>
        <label class="custom-radio">
          <input type="radio" name="author-logic" value="OR" /> or
        </label>
      </div>
      <div>
        <label class="classic-author-label" for="classic-author">Author</label>
        <textarea
          id="classic-author"
          name="author-names"
          cols="30"
          rows="2"
          placeholder="(Last, First M) one per line"
          aria-label="author names"
        ></textarea>
      </div>
    </div>
    <div class="col-sm-6" data-field="object" data-textInput="true">
      <div class="pull-right-sm">
        <div class="classic-form__logic-group logic-group">
          <label class="custom-radio">
            <input
              type="radio"
              name="object-logic"
              value="AND"
              checked="true"
            />
            and
          </label>
          <label class="custom-radio">
            <input type="radio" name="object-logic" value="OR" /> or
          </label>
        </div>
        <div>
          <label class="classic-object-label" for="classic-object"
            >Object</label
          >
          <textarea
            id="classic-object"
            name="object-names"
            cols="30"
            rows="2"
            placeholder="SIMBAD object search (one per line)"
            aria-label="SIMBAD object search"
          ></textarea>
        </div>
      </div>
    </div>
  </div>
  <div data-field="date">
    <div>
      <b>Publication date</b> between <br />
      <input
        class="form-control  date-control"
        maxlength="2"
        placeholder="MM"
        type="text"
        value=""
        name="month_from"
        style="margin-top:6px"
        aria-label="start publication month"
      />/
      <input
        class="form-control  date-control"
        maxlength="4"
        placeholder="YYYY"
        type="text"
        value=""
        name="year_from"
        aria-label="start publication year"
      />and
      <input
        class="form-control  date-control"
        maxlength="2"
        placeholder="MM"
        type="text"
        value=""
        name="month_to"
        aria-label="end publication month"
      />/
      <input
        class="form-control  date-control"
        maxlength="4"
        placeholder="YYYY"
        type="text"
        value=""
        name="year_to"
        aria-label="end publication year"
      />
    </div>
  </div>
  <div data-field="title" data-textInput="true">
    <div class="classic-form__logic-group logic-group pull-right">
      <label class="custom-radio">
        <input type="radio" name="title-logic" value="AND" checked="true" /> and
      </label>
      <label class="custom-radio"> <input type="radio" name="title-logic" value="OR" /> or </label>
      <label class="custom-radio">
        <input type="radio" name="title-logic" value="BOOLEAN" /> boolean
      </label>
    </div>
    <div>
      <label for="classic_title_input"> Title</label>
      <input
        id="classic_title_input"
        class="form-control"
        name="title"
        type="text"
        aria-label="title"
      />
    </div>
  </div>
  <div data-field="abs" data-textInput="true">
    <div class="classic-form__logic-group logic-group pull-right">
      <label class="custom-radio">
        <input type="radio" name="abstract-logic" value="AND" checked="true" />
        and
      </label>
      <label class="custom-radio">
        <input type="radio" name="abstract-logic" value="OR" /> or
      </label>
      <label class="custom-radio">
        <input type="radio" name="abstract-logic" value="BOOLEAN" /> boolean
      </label>
    </div>
    <div>
      <label for="classic_abstract_input"> Abstract/Keywords</label>
      <input
        id="clasic_abstract_input"
        class="form-control"
        name="abs"
        type="text"
        aria-label="abstract and keywords"
      />
    </div>
  </div>
  <div data-field="property">
    <label class="custom-checkbox">
      <input type="checkbox" name="refereed" />&nbsp;Refereed only&nbsp;
    </label>
    &nbsp;&nbsp;&nbsp;
    <label class="custom-checkbox">
      <input type="checkbox" name="article" />&nbsp;Articles only&nbsp;
    </label>
  </div>
  <div data-field="bibstem" data-textInput="true">
    <div class="logic-group">
      <label class="custom-checkbox">
        <input type="checkbox" class="hidden" value="OR" checked="true" />
      </label>
    </div>
    <label for="classic-bibstem">Publication(s)</label>
    <p class="help-block small">Press Return Key To Add Publication</p>
    <input
      id="classic-bibstem"
      type="text"
      class="form-control"
      name="bibstem"
      placeholder="Comma-separated bibstems of journal titles"
      autocomplete="off"
      aria-label="bibstems"
    />
  </div>

  <div data-field="sort" class="clearfix">
    <div class="col-sm-6">
      <label for="sort-container">Sort</label>
      <div id="sort-container"></div>
    </div>
  </div>
  <div class="pull-right">
    <button class="btn btn-default" type="reset">
      <i class="fa fa-times" aria-hidden="true"></i> Clear
    </button>
    <button class="btn btn-primary" type="submit">
      <i class="fa fa-search" aria-hidden="true"></i> Search
    </button>
  </div>
</form>
